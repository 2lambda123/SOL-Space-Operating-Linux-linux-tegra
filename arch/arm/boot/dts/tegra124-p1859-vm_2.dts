 /dts-v1/;

#include "tegra124-p1859.dtsi"

/ {
	model = "NVIDIA Tegra124 vcm30t124";
	compatible = "nvidia,vcm30t124", "nvidia,tegra124";
	nvidia,dtsfilename = __FILE__;

	host1x {
		sor {
			status = "disabled";
		};

		dpaux {
			status = "disabled";
		};

		/* tegradc.0 */
		dc@54200000 {
			status = "disabled";
		};

		/* tegradc.1 */
		dc@54240000 {
			status = "disabled";
		};
	};

	i2c@7000c400 {
		status = "disabled";
	};

	serial@70006000 {
		status = "disabled";
	};

	serial@70006040 {
		status = "disabled";
	};

	serial@70006300 {
		status = "disabled";
	};

	spi@7000d400 {
		status = "disabled";
	};

	spi@7000d600 {
		status = "disabled";
	};

	spi@7000d800 {
		status = "disabled";
	};

	spi@7000dc00 {
		status = "disabled";
	};

	xusb@70090000 {
		status = "disabled";
	};

	ahub {
		status = "okay";

		i2s@70301000 {
			status = "okay";
		};
		i2s@70301100 {
			status = "disabled";
		};
		i2s@70301200 {
			status = "disabled";
		};
		i2s@70301300 {
			status = "disabled";
		};
		i2s@70301400 {
			status = "okay";
		};
		spdif@70306000 {
			status = "okay";
		};
		amx@70303000 {
			status = "okay";
		};
		adx@70303800 {
			status = "okay";
		};
		amx@70303100 {
			status = "okay";
		};
		adx@70303900 {
			status = "okay";
		};
		dam@70302000 {
			status = "disabled";
		};
		dam@70302200 {
			status = "disabled";
		};
		dam@70302400 {
			status = "disabled";
		};
		afc@70307000 {
			status = "disabled";
		};
		afc@70307100 {
			status = "disabled";
		};
		afc@70307200 {
			status = "disabled";
		};
		afc@70307300 {
			status = "disabled";
		};
		afc@70307400 {
			status = "disabled";
		};
		afc@70307500 {
			status = "disabled";
		};
	};

	pcie-controller {
		status = "disabled";
	};

	sata@70020000 {
		status = "disabled";
	};

	sdhci@700b0600 {
		status = "disabled";
	};
	sdhci@700b0000 {
		status = "disabled";
	};

	sdhci@700b0400 {
		status = "disabled";
	};

	/* Disable device nodes enabled by default in tegra124-soc.dtsi */
	gpio@6000d000 {
		status = "disabled";
	};

	pinmux@70000868 {
		status = "disabled";
	};

	pwm@7000a000 {
		status = "disabled";
	};

	i2c@7000c000 {
		status = "disabled";
	};

	i2c@7000c400 {
		status = "disabled";
	};

	i2c@7000c500 {
		status = "disabled";
	};

	i2c@7000c700 {
		status = "disabled";
	};

	i2c@7000d000 {
		status = "disabled";
	};

	i2c@7000d100 {
		status = "disabled";
	};

	efuse@7000f800 {
		status = "disabled";
        };

	apbdma: dma@60020000 {
		dma-channels = <16>;
		nvidia,start-dma-channel-index = <16>;
		status = "okay";
	};

	vic {
		status = "disabled";
	};

	soctherm@0x700E2000 {
		status = "disabled";
	};

	bluedroid_pm {
		status = "disabled";
	};

	/* Hypervisor related nodes */
	tegra_hv: hyp {
		compatible = "nvidia,tegra-hv";
		status = "okay";

		local-loopbacks = <3 4>;

		server-to-peers = <1>;

		queues {
			#address-cells = <1>;
			#size-cells = <0>;

			/* guest 0 <-> guest 1 (frame based) */
			ivc0 {
				reg = <0>;
				peers = <0 1>;
			};

			/* guest 0 <-> guest 1 (comm) */
			ivc1 {
				reg = <2>;
				peers = <0 1>;
			};

			/* guest 0 <-> guest 1 (net) */
			ivc2 {
				reg = <2>;
				peers = <0 1>;
			};

			/* guest 1 <-> guest 1 (loop) */
			ivc3 {
				reg = <3>;
				peers = <1 1>;
				nframes = <4>;
				frame-size = <16>;
			};

			/* guest 1 <-> guest 1 (loop) */
			ivc4 {
				reg = <4>;
				peers = <1 1>;
				nframes = <4>;
				frame-size = <16>;
			};
		};
	};

	/* the virtual serial device node */
	tegra_hv_comm {
		compatible = "nvidia,tegra-hv-comm";
		status = "okay";
		/* ivc channel to use definition (second one in tegra_hv) */
		ivc = <&tegra_hv 1>;
	};

	tegra_hv_net {
		compatible = "nvidia,tegra-hv-net";
		status = "okay";
		/* ivc channel to use definition (third one in tegra_hv) */
		ivc = <&tegra_hv 2>;
	};

	snor {
		status = "disabled";
	};
};
