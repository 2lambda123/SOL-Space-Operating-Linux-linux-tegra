/dts-v1/;

/include/ "tegra132.dtsi"

/ {
	model = "exuma_sim";
	compatible = "nvidia,exuma", "nvidia,tegra132";
	interrupt-parent = <&intc>;

	/* chosen */

	memory@80000000 {
		device_type = "memory";
		reg = < 0x00000000 0x80000000 0x40000000 >;
	};

	intc: interrupt-controller {
		compatible = "arm,cortex-a9-gic";
		reg = <0x00000000 0x50041000 0x1000
		       0x00000000 0x50042000 0x0100>;
		interrupt-controller;
		#interrupt-cells = <3>;
	};

	timer {
		compatible = "arm,armv8-timer";
		interrupts = <1 14 0xff01>;
		clock-frequency = <12000000>;
	};
};
